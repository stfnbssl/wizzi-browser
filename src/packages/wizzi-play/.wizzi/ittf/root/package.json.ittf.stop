{
	$include app-options

	name "${app.name}"
	version "${app.version}"
	description "${app.description}"
	author "${app.author}"
	license "${app.license}"
	
	main "index.js"
	
	{ scripts
		test "echo \"Error: no test specified\" && exit 1"
		app/package/scripts(&app)
	
	{ dependencies
		app/package/dependencies(&app)
		lru-cache "latest"

	{ devDependencies
        @babel/core "7.4.5"
        babel-loader "^8.0.6"
		app/package/devDependencies(&app)
